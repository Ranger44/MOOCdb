<!DOCTYPE html>

<script type="text/javascript">
function validateForm() {
	console.log("validating");
    var x = document.forms["update-timeUnit"]["name"].value;
    if (x == "") {
        alert("Please fill all required fields");
        return false;
    }
	return true;
}
</script>

<html>
	<p><a href="../index.html">Home</a></p>
	<h1>Update {{oneTimeUnit.name}}:</h1>
	<form id="update-timeUnit" action="/timeUnit" method="post">
		Name: <input type="text" name="name" value="{{oneTimeUnit.name}}"><br>
	</form>
	<button onclick="return validateForm() && updateTimeUnit({{oneTimeUnit.id}})">Update</button>
</html>